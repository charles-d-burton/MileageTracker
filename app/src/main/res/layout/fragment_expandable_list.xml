<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExpandableListFragment"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 Miles"
        android:id="@+id/total_miles"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Start Point"
        android:id="@+id/add_start_point"
        android:layout_below="@+id/total_miles"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ExpandableListView
        android:id="@+id/expanding_view"
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:background="@android:color/background_light"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentBottom="true"
        android:divider="#ff000000"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="true"
        android:headerDividersEnabled="false" />




</RelativeLayout>
